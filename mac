#fancy_echo "setting your shell permanently to zsh...
#==============================="
#exec zsh

date ; read -t 10 -p "Congrats, setup is complete! Rebooting your computer now...Press ENTER or wait ten seconds" ; echo ; date
echo
{
read -n1 -t 10 -p "$(tput setaf 1) Congrats, setup is complete! Rebooting your computer now [reboot/quit] " rq
   fancy_echo "$(date +%Y-%m-%d\ %H:%M:%S) Answer: $rq"
   case "$rq" in
        [Rr]* ) sudo /sbin/reboot $*; echo; exit;;
        [Qq]* ) echo; exit;;
    * )
esac
}



